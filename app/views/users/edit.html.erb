<!-- Forms
================================================== -->
<div class="bs-docs-section">
<div class="row">
<div class="col-lg-12">
<div class="page-header">
<br>
<h1 id="forms">プロフィール編集ページ</h1>
</div>
</div>
</div>


<div class="row">
<div class="col-lg-12">
<div class="well bs-component">
<form class="form-horizontal">
<fieldset>
<%= form_for @user, :url => {:action => "update", :controller => "users"}, method: :put do |f| %>
<div class="form-group">
<h2>プロフィール画像</h2>
<div class="form-group file">
<%= f.file_field :avatar, class: "form-control floating-label", placeholder: "画像アップロード" %>
</div>
</div>
<div class="form-group">
<label for="inputUsername" class="col-lg-3 control-label"><h4>ユーザー名設定</h4></label>
<%= f.text_field :name, placeholder: "名前を入力してください", class: "form-control" %>
</div>

<div class="form-group">
<label for="inputUsername" class="col-lg-3 control-label"><h4>プロフィール文編集</h4></label>
<%= f.text_field :message, placeholder: "プロフィールを入力してください", class: "form-control" %>
</div>
<div class="form-group">
<label for="inputUsername" class="col-lg-3 control-label"><h4>GitHub/Quiita URL</h4></label>
<%= f.text_field :url, placeholder: "GitHub/QuitaのURLを、カンマ区切りで入力してください", class: "form-control" %>
</div>
<div class="form-group">
<%= f.submit "更新", class: "btn btn-primary" %>
</div>
<% end %>
</fieldset>
</form>
</div>
</div>
</div>
</div>
